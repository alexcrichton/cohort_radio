<% comment = Comment.new :song => @song unless defined?(comment) && comment %>

<% form_for comment, :url => (comment.new_record? ? song_comments_path(@song) : song_comment_path(@song, comment)) do |f| %>
	<dl>
		<dt><%= f.label :text %></dt>
		<dd><%= f.text_area :text, :style => 'height:100px' %></dd>
		<dt><%= f.submit 'Comment' %></dt>
		<dd><%= link_to '[cancel]', '#', :class => 'cancel' %></dd>
	</dl>
<% end %>