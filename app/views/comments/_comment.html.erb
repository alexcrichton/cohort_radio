<div class="comment remove inline-edit">
	<div class='content'>
		<h4><%= comment.user.name %></h4>
		<%= raw markdown(comment.text) %>
	</div>
	<div class='form'>
		<%= render 'comments/form', :comment => comment %>
	</div>
	<div class='links'>
		<%= link_to '[edit]', '#', :class => 'edit' if can? :update, comment %>
		<% if can? :destroy, comment %>
		  <% javascript 'helpers' %>
  		<%= link_to '[destroy]', song_comment_path(comment.song, comment), :class => 'remote-remove' %>
  	<% end %>
	</div>
</div>