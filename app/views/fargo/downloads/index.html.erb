
<table>
	<tr>
		<th>Nick</th>
		<th>File</th>
		<th>Last Run</th>
		<th>Last Error</th>
		<th>Attempts</th>
	</tr>
	<% @jobs.each do |job| %>
		<tr>
			<td><%= job.payload_object.nick %></td>
			<td><%= job.payload_object.file %></td>
			<td><%= job.run_at %></td>
			<td><%= job.last_error.split("\n").first unless job.last_error.nil? %></td>
			<td><%= job.attempts %></td>
			<td>
				<%= link_to "Remove", fargo_download_path(job.id), :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>
