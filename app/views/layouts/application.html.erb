<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
		<%= csrf_meta_tag %>
    <title><%= content_for?(:title) ? yield(:title) : "Cohort Radio" %></title>
    <%= stylesheet_link_tag 'blueprint/screen', 'application' %>
    <%= javascript_include_tag 'jquery', 'rails', 'jquery.form', 'jquery.validate', 'jquery.autocomplete', 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<%= link_to 'Songs', songs_path %>
			<%= link_to 'Playlists', playlists_path %>
			<%= link_to "Admin songs", :controller => "songs", :action => "admin" %>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
