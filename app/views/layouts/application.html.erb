<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
		<%= csrf_meta_tag %>
    <title><%= content_for?(:title) ? yield(:title) : "Cohort Radio" %></title>
    <%= stylesheet_link_tag 'blueprint/screen', 'application', 'autocomplete' %>
    <%= javascript_include_tag 'jquery', 'rails', 'jquery.form', 'jquery.validate', 'jquery.autocomplete', 'application' %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div>
				<%= link_to 'Home', playlist_path('main') %>
				<%= link_to 'Songs', songs_path %>
				<% if can? :manage, Fargo %>
					<% if fargo_running? %>
						<% if fargo_connected? %>
							<%= link_to 'Disconnect Fargo', :controller => 'fargo/commands', :action => 'disconnect' %>
						<% else %>
							<%= link_to 'Connect Fargo', :controller => 'fargo/commands', :action => 'connect' %>
						<% end %>
						<%= link_to "Downloads", fargo_downloads_path %>
					<% else %>
						Fargo is not running.
					<% end %>
				<% end %>
				<% if can? :manage, Radio %>
					<% if radio_running? %>
						<% if radio_connected? %>
							<%= link_to 'Disconnect Radio', :controller => 'radio/commands', :action => 'disconnect' %>
							<%= link_to "Status", :controller => 'radio/status' %>
						<% else %>
							<%= link_to 'Connect Radio', :controller => 'radio/commands', :action => 'connect' %>
						<% end %>
					<% else %>
						Radio is not running.
					<% end %>
				<% end %>
				<div style='float:right'>
					<% if current_user %>
						Logged in as: <%= current_user.email %> |
						<%= link_to 'Logout', logout_path %>
					<% else %>
						<%= link_to "Login", login_path %>
					<% end %>
				</div>
			</div>
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
