<h1>Playlists</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for playlist in @playlists %>
    <tr>
      <td><%= link_to playlist.name, playlist %></td>
      <td>
        <% if can? :manage, playlist %>
          <%= link_to "Edit", [:edit, playlist] %>
          <%#= link_to "Destroy", playlist, :confirm => 'Are you sure?', :method => :delete %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @playlists %>

<p><%= link_to "New Playlist", [:new, :playlist] if can? :create, Playlist %></p>
