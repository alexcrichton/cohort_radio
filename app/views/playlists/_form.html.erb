<% form_for @playlist do |f| %>
  <%= f.error_messages %>
  <dl>
    <dt><%= f.label :name %></dt>
    <dd><%= f.text_field :name %></dd>
    <dt><%= f.label :private %></dt>
    <dd><%= f.check_box :private %></dd>
		<dt><%= f.label :description %></dt>
		<dd><%= f.text_area :description %></dd>
	</dl>

  <p><%= f.submit "Submit" %></p>
<% end %>

<% unless @playlist.new_record? %>
	<h3>Users Allowed to this Playlist</h3>
	<div id='memberships'>
		<ul>
			<% @playlist.memberships.each do |membership| %>
			<li><%= membership.user.name %> <%= link_to '[remove]', playlist_membership_path(@playlist, membership) %></li>
			<% end %>
		</ul>
		<% form_for @playlist.memberships.build, :url => playlist_memberships_path(@playlist) do |f| %>
			<div>
				<%= text_field_tag :q %>
				<%= f.submit 'Add' %>
			</div>
		<% end %>
	</div>
<% end %>