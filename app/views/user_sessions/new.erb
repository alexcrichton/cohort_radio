<div class="login">
  <% form_for :user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <dl class="pass">
      <dt><%= f.label :email, 'email' %></dt>
      <dd><%= f.text_field :email %></dd>
      <dt><%= f.label :password, 'password' %></dt>
      <dd><%= f.password_field :password %></dd>
    </dl>
    <div class="tcenter">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'remember' %>
      <br />
      <%= f.submit "Login" %>
    </div>
  <% end %>
  <div id="links"> 
    <%= link_to 'create an account', new_user_path %><br />
    <%= link_to 'forgot password?', new_password_reset_path %><br />
    <%= link_to 'resend activation', new_activation_path %>
  </div>
</div>
