<div class="song">
	<div class='image'>
		<%= image_tag song.album_image_url if song.album_image_url %>
	</div>
	<div class='content'>
		<h3><%= song.title %></h3>
		<h5>
			<%= song.artist %> 
			<%= raw "&mdash; #{song.album}" unless song.album.blank? %>
		</h5>
		<p>
			Play count: <%= song.play_count %>
		</p>
	</div>
	<div class='links'>
		<%= link_to '[download]', download_song_path(song) %>
	</div>
</div>