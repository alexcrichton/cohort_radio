<% paginated_section @songs do %>
	<table>
		<tr>
			<th>Title/File</th>
			<th>Artist</th>
			<th>Album</th>
			<th></th>
		</tr>
		<% @songs.each do |song| %>
			<tr>
				<td><%= link_to song.display_title, song %></td>
				<td><%= song.artist %></td>
				<td><%= song.album %></td>
				<td>
					<% if can? :manage, song %>
						<%= link_to "Edit", edit_song_path(song) %>
						<%= link_to "Delete", song, :confirm => 'are you sure?', :method => :delete %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</table>
<% end %>