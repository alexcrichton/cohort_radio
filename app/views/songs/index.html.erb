<% javascript 'pagination' %>

<%= content_tag :h2, @parent.name if @parent %>

<div class='alphabet pagination'>
	<%= link_to 'All', :songs %>
	<% ('A'..'Z').each do |letter| %>
		<%= link_to letter, songs_path + '?' + {:letter => letter}.to_query %>
	<% end %>
</div>

<%= paginated_section @songs, :outer_window => 3, :inner_window => 8 do %>
	<%= render @songs %>
<% end  %>
