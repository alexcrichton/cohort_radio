<% form_for @song, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
	<% if @song.new_record? %>
	  <p>
	    <%= f.label :audio, 'Audio File' %><br />
	    <%= f.file_field :audio %>
	  </p>
	<% else %>
		<div class='hide'><%= f.hidden_field :custom_set, :value => true %></div>
		<p>
	    <%= f.label :title, 'Title' %><br />
	    <%= f.text_field :title %>
	  </p>
		<p>
	    <%= f.label :artist_name, 'Artist' %><br />
	    <%= f.text_field :artist_name, :value => @song.artist.name %>
	  </p>
		<p>
	    <%= f.label :album_name, 'Album' %><br />
	    <%= f.text_field :album_name, :value => @song.album.name %>
	  </p>
	<% end %>
  <p><%= f.submit "Submit" %></p>
<% end %>
